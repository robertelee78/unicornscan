# Copy this file to .env and configure your database connection

# =============================================================================
# Database Backend (choose one)
# =============================================================================

# Backend mode: 'demo' | 'postgrest'
#   demo     - Mock data for development (no database required)
#   postgrest - PostgREST pointed at PostgreSQL
VITE_DB_BACKEND=demo

# =============================================================================
# PostgREST Configuration (when VITE_DB_BACKEND=postgrest)
# =============================================================================

# Your PostgREST instance URL (typically port 3000)
# See: https://postgrest.org/en/stable/
VITE_POSTGREST_URL=http://localhost:3000

# =============================================================================
# App Settings
# =============================================================================

# App title (shown in browser tab)
VITE_APP_TITLE=Alicorn

# Enable debug logging in console
VITE_DEBUG=false
