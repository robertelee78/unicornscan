# Unicornscan Frontend Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database Connection (choose one method)
# =============================================================================

# Option 1: Supabase (hosted PostgreSQL)
# Get these from your Supabase project settings -> API
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Option 2: Direct PostgreSQL connection
# Format: postgresql://user:password@host:port/database
VITE_DATABASE_URL=postgresql://unicornscan:password@localhost:5432/unicornscan

# =============================================================================
# App Settings
# =============================================================================

# Which database backend to use: "supabase" or "postgres"
VITE_DB_BACKEND=supabase

# App title (shown in browser tab)
VITE_APP_TITLE=Unicornscan

# Enable debug logging in console
VITE_DEBUG=false
